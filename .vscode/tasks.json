{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build code",
            "type": "shell",
            "command": "./gradlew build",
            "windows": {
                "command": "gradlew.bat build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy to robot",
            "type": "shell",
            "command": "./gradlew deploy",
            "windows": {
                "command": "gradlew.bat deploy"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
        {
            "label": "View RoboRIO console output",
            "type": "shell",
            "command": "./gradlew riolog -Pfakeds",
            "windows": {
                "command": "gradlew.bat riolog -Pfakeds"
            },
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true
            }
        }
    ]
}